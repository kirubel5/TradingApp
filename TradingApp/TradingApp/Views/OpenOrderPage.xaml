<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TradingApp.Views.OpenOrderPage" 
             xmlns:viewmodels="clr-namespace:TradingApp.ViewModels" 
             xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
            >

    <ContentPage.BindingContext>
        <viewmodels:TradeViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid RowDefinitions="auto, *, auto" 
                BackgroundColor="{StaticResource Background}" 
                RowSpacing="0" 
                Margin="0,0,0,0">

            <!--Navigation Bar-->
            <Frame                           
                BackgroundColor="{StaticResource GridBackground}"
                Margin="2,10,2,1"
                HeightRequest="10"
                HasShadow="True"
                CornerRadius="15">

                <Grid ColumnDefinitions="*, auto">
                    <Label 
                        Text="Open Orders"
                        Style="{StaticResource SimpleLabelStyle}"
                        Margin="10,-13,0,-10"
                        FontFamily="Montserrat-Regular"
                        FontSize="25"/>
                </Grid>
            </Frame>

            <!--Tabbar-->
            <Frame            
                    Grid.Row="2"
                    BackgroundColor="{StaticResource GridBackground}"
                    Margin="0,1,0,-10"
                    HeightRequest="60"
                    HasShadow="False"
                    CornerRadius="15"
                    Padding="0">

                <ScrollView BackgroundColor="{StaticResource GridBackground}"
                        Orientation="Horizontal"
                        Margin="0"
                        Padding="20">

                    <StackLayout Orientation="Horizontal"
                            Margin="-5,-10,0,-5">

                        <buttons:SfButton   
                                Style="{StaticResource TabbarButton}"
                                Command="{Binding GoToTrackPage}"
                                Text="Track"/>

                        <buttons:SfButton
                                Text="Trade"
                                Style="{StaticResource TabbarButton}"
                                Command="{Binding GoToTradePage}"/>

                        <buttons:SfButton
                                Text="Arbitrage"
                                Style="{StaticResource TabbarButton}"
                                Command="{Binding GoToTradePage}"/>

                        <buttons:SfButton
                                Text="Open"
                                Style="{StaticResource TabbarButton}"/>
                    </StackLayout>
                </ScrollView>

            </Frame>

            <Frame Grid.Row="1"
                BackgroundColor="{StaticResource Background}">
                <Label Text="Cumming Soon"
                       Style="{StaticResource SimpleLabelStyle}"
                       FontSize="35"
                       HorizontalOptions="Center"/>
            </Frame>
            
